{
  "name": "idyll-studio",
  "description": "A graphical editor for creating Idyll documents.",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "start:watch": "cross-env NODE_ENV=development nodemon --exec electron ./src/",
    "import-forge": "electron-forge import",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.js"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-stage-2": "^7.8.3",
    "@babel/register": "^7.12.10",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
    "csv-parse": "^4.15.0",
    "draft-js": "^0.11.7",
    "electron-squirrel-startup": "^1.0.0",
    "fast-copy": "^2.1.1",
    "idyll": "^5.2.2",
    "idyll-ast": "^2.2.1",
    "idyll-compiler": "^4.0.20",
    "idyll-components": "^4.1.2",
    "idyll-document": "^3.4.2",
    "lodash.throttle": "^4.1.1",
    "postcss": "^8.2.4",
    "postcss-js": "^3.0.3",
    "react": "^16.14.0",
    "react-data-grid": "^6.1.0",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dom": "^16.14.0",
    "react-select": "^3.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "acorn": "^7.4.1",
    "cross-env": "^7.0.3",
    "electron": "^11.2.3",
    "electron-connect": "*",
    "electron-devtools-installer": "^2.2.4",
    "electron-react-devtools": "^0.5.3",
    "electron-reload": "^1.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "esm": "^3.2.25",
    "expect": "^25.5.0",
    "jest": "^25.5.4",
    "nodemon": "^2.0.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "static/icon.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Idyll Studio"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
